

<% if user_signed_in? %>
  <% if is_favourite == false %>
    <%= link_to car_favourites_path(car), remote: true, method: :post do %>
      <i id="star<%=car.id%>" class="fas fa-star empty-star" style="font-size: 38px">
      </i>
    <% end %>
  <% else %>
    <%#= link_to favourite_path(Favourite.where(user: current_user, car: car).first.id), remote: true, method: :delete do %>
    <%= link_to favourite_path(favourite_id), remote: true, method: :delete do %>
      <i id="star<%=car.id%>" class="fas fa-star yellow-star" style="font-size: 38px">
      </i>
    <% end %>
  <% end %>
<% else %>
  <i class="fas fa-star empty-star need-auth" data-car-id='<%=car.id%>' style="font-size: 38px"></i>
<% end %>

