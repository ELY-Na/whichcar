<div class="container" style="margin:0 auto;">
  <div class="back" style="background-color: white;">
    <button style="margin-left: 30px; padding: 10px; margin-bottom: 30px;">
      <%= link_to '< Back to your favourites', cars_path %>
    </button>

    <div class="container_compare">
      <div class="compare-items">
        <div class="compare-item" style="align-items: center;">
          <% new_width = 300 %>
          <% car_photo = @favourite.car.photo.sub(/width=\d+/, "width=#{new_width}") %>
          <%=image_tag car_photo,class: 'photo_car'%><br>
        </div>
      </div>

      <h4 class="font-weight-bold">Model</h4>
      <hr>
      <div class="compare-items">
        <div class="compare-item" style="text-align: center;">
          <%=@favourite.car.model%>
        </div>
      </div>

      <br>
      <h4 class="font-weight-bold">Fuel Type</h4>
      <hr>
      <div class="compare-items">
          <div class="compare-item" style="text-align: center;">
            <% if @favourite.car.fuel == "Essence"%>
              <%=image_tag 'gas.jpg',style:"width:70px ;height:100px"%>
            <% elsif @favourite.car.fuel == "Diesel" %>
                <%=image_tag 'diesel.jpg',style:"width:100px ;height:70px"%>
            <% elsif @favourite.car.fuel == "Hybrid" %>
              <%=image_tag 'hybrid.png',style:"width:100px ;height:70px"%>
            <%else%>
              <%=image_tag 'electric.png',style:"width:130px ;height:70px"%>
            <%end%>
          </div>
      </div>

      <br>
      <h4 class="font-weight-bold">Gearbox Type</h4>
      <hr>
        <div class="compare-items">
          <div class="compare-item" style="text-align: center;">
            <% if @favourite.car.gearbox == "automatique" %>
            <p>Automatic</p>
            <% else %>
            <p>Manual</p>
            <% end %>
          </div>
      </div>

      <br>
      <h4 class="font-weight-bold">Available Passenger Number</h4>
      <hr>
      <div class="compare-items">
        <div class="compare-item" style="text-align: center;">
          <%=image_tag 'driver.png',class:'avatar'%>+ <%=@favourite.car.passengers-1%>
        </div>
      </div>

      <br>
      <h4 class="font-weight-bold">Size Of The Trunk</h4>
      <hr>
      <div class="compare-items">
        <div class="compare-item" style="text-align: center;">
          <%=@favourite.car.trunk_size%> L
        </div>
      </div>

      <br>
      <h4 class="font-weight-bold">Crit'air</h4>
      <hr>

      <div class="compare-items" style="text-align: center;">
        <div class="compare-item">
          <% if @favourite.car.critair == 1%>
            <%=image_tag 'critair1.jpg',class: 'critair_photo'%>
          <% elsif @favourite.car.critair == 2 %>
              <%=image_tag 'critair2.jpg',class: 'critair_photo'%>
          <% elsif @favourite.car.critair == 3 %>
            <%=image_tag 'critair3.jpg',class: 'critair_photo'%>
          <% elsif @favourite.car.critair == 4 %>
            <%=image_tag 'critair4.jpg',class: 'critair_photo'%>
          <% elsif @favourite.car.critair == 5 %>
            <%=image_tag 'critair5.jpg',class: 'critair_photo'%>
          <%else%>
            <%=image_tag 'critairhybrid.jpg',class: 'critair_photo'%>
          <%end%>
        </div>
        </div>

      <br>
      <h4 class="font-weight-bold">Year Of Releasing</h4>
      <hr>
      <div class="compare-items">
          <div class="compare-item" style="text-align: center;">
            <%=@favourite.car.year%>
          </div>
      </div>

      <br>
      <h4 class="font-weight-bold">Power</h4>
      <hr>
      <div class="compare-item text-power" style="text-align: center;">
        <%=@favourite.car.horse_power%> ch
        so
        <%=@favourite.car.power_fiscal%> CV
      </div>
      <br>
      <h4 class="font-weight-bold">Price</h4>
      <hr>
      <div class="compare-items">
        <div class="compare-item" style="text-align: center;">
          <%=@favourite.car.price%> â‚¬
        </div>
      </div>

      <div class="share_link">
        <%=link_to "Get more informations", @favourite.car.link%>
        <span id="share">Share it!<%= social_share_button_tag(@favourite.car.model, desc: "Go and check out my car!", via: "WhichCar")%></span>
      </div>
    </div>
  </div>
</div>
