
  <div class="container">

    <h2>Your Favourites</h2>
      <% @favourites.each do|f|%>
          <div class="car_description align-items-center">
            <%= image_tag f.car.photo ,class: "photos"%>
            <div class="detail pl-3">
              <h3><%=f.car.model%></h3>

              ➡  <%=link_to "Click here if you want to see the details and Share!",favourite_path(f)%>
              <br>
              ➡  <%= link_to 'Delete this favourite',favourite_path(f), :method => :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %>

            </div>
          </div>
      <%end%>
    </div>
    <button style="margin-left: 30px; padding: 10px; margin-top: 30px;">
      <%= link_to '< Back', request.referrer %>
    </button>

