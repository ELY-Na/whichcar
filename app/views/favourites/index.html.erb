<div class="home">
  <div class="container-fav ">
    <h2>Your Favourites</h2>
    <div class="info_fav">
      <% @favourites.each do|f|%>
        <div class="car_infos">
          <div class="car_description">
            <%= image_tag f.car.photo ,class: "photos"%>
            <div class="info_car">
              <h3><%=f.car.model%></h3>
              <div class="infos">
                <div class="info ">
                  <p>Passengers : <%=f.car.passengers%></p>
                  <p>Year :       <%=f.car.year%></p>
                  <p>Fuel :       <%=f.car.fuel%></p>
                  <p>Crit'air :   <%=f.car.critair%></p>
                  <p>Gearbox :    <%=f.car.gearbox%></p>
                  <p>Trunk size : <%=f.car.trunk_size%> L</p>
                  <h3>Price : <%=f.car.price%> â‚¬</h3>
                  <%=link_to "Get more information",f.car.link%>

                </div>

                  <span></span>
                  <span id="share"><%= social_share_button_tag(f.car.model) %></span>

              </div>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
      



