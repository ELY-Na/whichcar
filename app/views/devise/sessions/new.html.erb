<div class="biggercontainer">

<div class="container-form">


<div class="form">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs-sign">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: 'Email',
                label: false %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                placeholder: 'Password',
                label: false %>
    <%= f.input :remember_me,
                as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions log" >
    <%= f.button :submit, "Log in", class:"btn btn-primary login"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

<div class="image-form">
<%= image_tag "log.png", alt: "alttext" %>
</div>

</div>
</div>
